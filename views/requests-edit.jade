extends _layout/base

block content
	.container
		h1 edit request

		form(method="post")
			.form-group
				label(for="name") Name
				input.form-control(name="name", value=request.name)
			.form-group
				label(for="description") Description
				textarea.form-control(name="description", value=request.description)
			input(type="submit", value="Update")
